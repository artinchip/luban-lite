
# Kconfig file for package Adafruit-LIS3MDL
menuconfig PKG_USING_ARDUINO_ADAFRUIT_LIS3MDL
    bool "Adafruit LIS3MDL: Triple-axis Magnetometer Sonsor"
    select PKG_USING_RTDUINO
    select RTDUINO_USING_WIRE
    select PKG_USING_ARDUINO_ADAFRUIT_SENSOR
    select PKG_USING_ARDUINO_ADAFRUIT_BUSIO
    default n

if PKG_USING_ARDUINO_ADAFRUIT_LIS3MDL

    config PKG_ARDUINO_ADAFRUIT_LIS3MDL_PATH
        string
        default "/packages/arduino/sensors/Adafruit-LIS3MDL"

    choice
        prompt "Version"
        default PKG_USING_ARDUINO_ADAFRUIT_LIS3MDL_LATEST_VERSION
        help
            Select the package version

        config PKG_USING_ARDUINO_ADAFRUIT_LIS3MDL_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_ARDUINO_ADAFRUIT_LIS3MDL_VER
       string
       default "latest"    if PKG_USING_ARDUINO_ADAFRUIT_LIS3MDL_LATEST_VERSION

endif

